<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lay4"
    tools:context=".PingBackForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="40dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp">

        <TextView
            android:id="@+id/textView22323"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingVertical="10dp"
            android:text="Create a Ping:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="35dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:text="Private" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/privateSwitchPingBackForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>




        <ImageView
            android:id="@+id/imageView8pingback"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/scenery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/buttonpingbackform"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginVertical="10dp"
                android:background="@drawable/ic_baseline_drive_folder_upload_24"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:paddingHorizontal="20dp"
                android:textAllCaps="false"
                android:fontFamily="@font/nexabold"
                android:backgroundTint="@color/white"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingTop="20dp"
            android:text="Description:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/PingBackFormDescription"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:ems="10"

            android:fontFamily="@font/nexabold"
            android:inputType="textMultiLine"

            android:paddingTop="20dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/addressPingBackFormPage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/nexabold"
            android:paddingTop="10dp"
            android:text="Select your address-"
            android:textColor="@color/black" />


        <Button
            android:background="@drawable/button_shadow"
            android:fontFamily="@font/nexabold"
            android:layout_marginTop="10dp"
            android:id="@+id/createPingPingBackForm"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:onClick="SubmitPingBack"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbarPingBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>