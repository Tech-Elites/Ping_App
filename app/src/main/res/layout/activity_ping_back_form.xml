<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lay4"
    tools:context=".PingBackForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="40dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp">

        <TextView
            android:id="@+id/textView22323"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingVertical="10dp"
            android:text="Ping"
            android:textColor="@color/black"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/textView222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:text="Select Visibility"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:text="Private" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/privateSwitchPingBackForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>




        <TextView
            android:id="@+id/textView466"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingVertical="10dp"
            android:text="Upload Media"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shadow"
            android:fontFamily="@font/nexabold"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:textAllCaps="false"
            android:text="Upload Image" />

        <TextView
            android:id="@+id/textView4456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingTop="20dp"
            android:text="Description:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/PingBackFormDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"

            android:fontFamily="@font/nexabold"
            android:inputType="textMultiLine"

            android:paddingTop="20dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/addressPingBackFormPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingTop="40dp"
            android:text="Select your address-"
            android:textColor="@color/black" />


        <Button
            android:background="@drawable/button_shadow"
            android:fontFamily="@font/nexabold"
            android:layout_marginTop="20dp"
            android:id="@+id/createPingPingBackForm"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:onClick="SubmitPingBack"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>