<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:background="@drawable/lay1"
    tools:context=".PingConfirmNewPing_PingBacks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            android:paddingVertical="20dp"
            android:layout_height="wrap_content"
            android:text="Select Users from this area to ping back:" />

        <ListView
            android:id="@+id/newPingPingbackListView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="newPingPingbackSkip"
            android:background="@drawable/button_shadow"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:textAllCaps="false"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/nexabold"
            android:text="Skip" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="newPingPingbackProceed"
            android:background="@drawable/button_shadow"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/nexabold"
            android:text="Proceed" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>