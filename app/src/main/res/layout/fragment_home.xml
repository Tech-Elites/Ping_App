<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lay1"
    tools:context=".home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/textView223"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:paddingVertical="10dp"
                android:text="Create a Ping:"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/nexabold"
                    android:text="Private"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/privateSwitchHome"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/scenery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_marginVertical="10dp"
                    android:background="@drawable/ic_baseline_drive_folder_upload_24"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/nexabold"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:paddingTop="20dp"
                android:text="Description:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/homeDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:ems="10"

                android:fontFamily="@font/nexabold"
                android:inputType="textMultiLine"

                android:paddingTop="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressHomePage"
                    android:layout_width="320dp"
                    android:layout_height="78dp"
                    android:fontFamily="@font/nexabold"
                    android:inputType="textMultiLine"
                    android:paddingVertical="10dp"
                    android:text="Select your address-"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonsetLocationHome"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/ic_baseline_gps_fixed_24"

                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/nexabold"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/createPingHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shadow"
                android:fontFamily="@font/nexabold"
                android:paddingHorizontal="20dp"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarHome"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>